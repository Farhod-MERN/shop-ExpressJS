{{!-- import "/public/index.css" --}}
{{#if products.length }}
<h3>All Books for you ! ❤️</h3>
<div class="books" style="width: 100%;">
  {{#each products}}
    <div class="m-2 bg-white">
    <div class="bookCard position-relative">
      <div class="mobileCard d-flex g-0 border rounded overflow-hidden shadow-lg h-md-250 position-relative">
        <div class="col p-4 d-flex flex-column position-static">
          <div class="d-flex justify-content-between">
            <strong class="d-inline-block mb-2 text-primary">{{username}}</strong>
            <span><strong>$</strong>{{price}}.00</span>
          </div>
          <h4  class="mb-1">{{title}}</h4>
          <p class="card-text mb-auto">{{description}}</p>
           <div class="mb-1 d-flex ">
            <span class="avatar mx-2">{{getFullNameFirstElem user.firstName user.lastName}}</span>
            <div >
              <p class="mt-3 m-0">{{user.firstName}} {{user.lastName}}</p>
              <p class="m-0"><small>{{getCut createdAt}}</small></p>
            </div>
           </div>
        </div>
        <div class="d-block">
         <img class="bookImage" src={{image}} alt="image">
        </div>
      </div>
        <div class="position-absolute top-0 end-0 btn-group btn-group-md" role="group" aria-label="Basic outlined example">
            <a href="/product/{{_id}}" type="button" class="btn btn-success"><i class="bi bi-info-circle"></i></a>
            {{#if @root.token}}
            {{#ifequal user._id @root.userId}}
              <a href="edit-product/{{_id}}" type="button" class="btn btn-info"><i class="bi bi-pencil-square"></i></a>
              <button type="button" class="btn btn-danger"><i class="bi bi-trash3"></i></button>
            {{/ifequal}}
            {{/if}}
        </div>
    </div>
   
    </div>
  {{/each}}
</div>
{{else}}
    <h3>No products yet</h3>
{{/if}}